{
  "compilerOptions": {
    "sourceMap": false,
    "noEmitOnError": true,
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "lib", "tests"]
}
